<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.studio.trymash">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".splash.FinalSplash"
            android:label="@string/title_activity_final_splash"
            android:screenOrientation="portrait" />
        <activity
            android:name=".splash.NextSplash"
            android:label="@string/title_activity_next_splash"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.EndActivity"
            android:label="@string/title_activity_end"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.FirstActivity"
            android:label="@string/title_activity_first"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SoundSettingsActivity"
            android:label="@string/title_activity_sound_settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.HighScoreActivity"
            android:label="@string/title_activity_high_score"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.HelpActivity"
            android:label="@string/title_activity_help"
            android:screenOrientation="portrait" />
        <activity
            android:name=".splash.Splash"
            android:label="@string/title_activity_splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>


</manifest>